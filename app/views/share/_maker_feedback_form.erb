
<%if request.status==RequestStatus::COMPLETED%>
<div id="blind" class="blind">
  <div id="message_form_container" class="central_form_container">
    <%= form_tag url_for(:controller => 'requests', :action => 'close_down'), :method => 'post' do%>
        <input type="hidden" name='taker_id' id='taker_id' value="<%=request.taker.id%>" />
        <div id="file_upload_form_box" class="central_form">
          <div id="click_able">
            <div class="in_line_block_row">
              <div style="float: left;width: 20%" class="in_line_block_title">任务结果</div><div  style="float: right;width: 80%"><div class="in_line_block">达到预期<input type="radio" name="success" value="1"></div> <div class="in_line_block"> 没有达到预期  <input type="radio" name="success" value="0"></div></div>
              <div class="clear"></div>
            </div>
            <div class="in_line_block_row">
              <div style="float: left;width: 20%" class="in_line_block_title">评分：</div><div  style="float: right;width: 80%"><div class="in_line_block">好评<input type="radio" name="rate" value="<%=VoteType::POSITIVE%>"></div> <div class="in_line_block"> 一般  <input type="radio" name="rate" value="<%=VoteType::NATURE%>"></div> <div class="in_line_block">差评  <input type="radio" name="rate" value="<%=VoteType::NEGATIVE%>"></div></div>
              <div class="clear"></div>
            </div>
            <div class="in_line_block_row">
              <div class="in_line_block_title" style="float: left;width: 20%">承接人评价 ：</div><div style="float: right;width: 80%"><textarea id='comment' name='comment' style="width: 100%;height: 100px;"></textarea></div>
              <div class="clear"></div>
            </div>
            <div class="in_line_block_row">
              <div class="in_line_block_title" style="float: left;width: 20%"></div><div style="float: right;width: 80%"><%=submit_tag '提交反馈',:class=>'button_blue' %></div>
              <div class="clear"></div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<%end%>