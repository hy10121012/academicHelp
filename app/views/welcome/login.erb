<%= form_tag("/login", method: "post") do %>
    <p>
      <%= label_tag('邮箱') %><br>
      <%= text_field_tag :email, :placeholder=>"输入邮箱" %>
    </p>
    <p>
      <%= label_tag('密码') %><br>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= submit_tag('登录') %>
    </p>
<% end %>